<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Library</title>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/library">Library App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <% if (user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/addBook">Add New Book</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="/publishers">Publishers</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Library Catalog</h2>

    <% if (books.length > 0) { %>
      <div class="row">
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="/images/<%= book.coverImage %>" class="card-img-top" alt="<%= book.title %>" style="height: 300px; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                <p class="card-text"><strong>Genre:</strong> <%= book.genre %></p>
                <p class="card-text"><strong>Available:</strong> <%= book.quantity %></p>
                
                <a href="/book/<%= book.bookId %>" class="btn btn-outline-primary btn-sm">View Details</a>

                <% if (user.role === 'admin') { %>
                  <a href="/updateBook/<%= book.bookId %>" class="btn btn-outline-warning btn-sm ms-1">Edit</a>
                  <a href="/deleteBook/<%= book.bookId %>" class="btn btn-outline-danger btn-sm ms-1" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center">No books available.</p>
    <% } %>
  </div>

</body>
</html>
