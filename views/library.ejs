<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <!-- Custom Theme -->
  <link href="/css/theme.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Verdana, sans-serif;
      background-color: #f8f9fa;
    }
    .card-img-top {
      height: 200px;
      object-fit: contain;
      background: #fff;
      border-radius: 8px 8px 0 0;
      padding: 10px;
    }
    .card {
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    }
    .search-bar {
      background: #fff;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 24px;
    }

  </style>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/library">Library App</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <!-- LEFT SIDE NAV -->
      <ul class="navbar-nav">
        <% if (user && user.role === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/addBook">Add New Book</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user">Users</a>
          </li>
        <% } %>
        <li class="nav-item">
          <a class="nav-link" href="/publishers">Publishers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/loans">Loans</a>
        </li>
      </ul>
        

      <!-- RIGHT SIDE NAV -->
      <ul class="navbar-nav ms-auto d-flex align-items-center">
        <% if (user) { %>
          <li class="nav-item me-3">
            <a href="/cart" class="nav-link">
              <i class="fa fa-shopping-cart"></i> Borrow Cart
            </a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle fs-4"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><span class="dropdown-item-text fw-bold"><%= user.username || user.name %></span></li>
              <li><span class="dropdown-item-text text-muted"><%= user.email %></span></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/fines">Fines</a></li>
              <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>


<!-- Main Content -->
<div class="container mt-4">
  <h1 class="text-center mb-4 fw-bold" style="letter-spacing:1px;">Library Catalog</h1>

  <form class="row g-3 mb-4 search-bar" method="GET" action="/library">
    <div class="col-md-6">
      <input type="text" class="form-control" name="search" placeholder="Search by title or author" value="<%= typeof search !== 'undefined' ? search : '' %>">
    </div>
    <div class="col-md-4">
      <select class="form-select" name="genre">
        <option value="">All Genres</option>
        <% genres.forEach(function(g) { %>
          <option value="<%= g %>" <%= genre === g ? 'selected' : '' %>><%= g %></option>
        <% }); %>
      </select>
    </div>
    <div class="col-md-2 d-grid">
      <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
  </form>

  <% if (books.length > 0) { %>
    <div class="row">
      <% books.forEach(book => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img 
              src="/images/<%= book.coverImage %>" 
              class="card-img-top" 
              alt="<%= book.title %>"
              onerror="this.src='/images/default.png'">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text mb-1"><strong>Author:</strong> <%= book.author %></p>
              <p class="card-text mb-1"><strong>Genre:</strong> <%= book.genre %></p>
              <p class="card-text mb-2"><strong>Available:</strong> <%= book.quantity %></p>
              <div class="mt-auto d-flex flex-wrap gap-1">
                <a href="/book/<%= book.bookId %>" class="btn btn-outline-primary btn-sm">View Details</a>
                <% if (user.role === 'admin') { %>
                  <a href="/updateBook/<%= book.bookId %>" class="btn btn-outline-warning btn-sm">Edit</a>
                  <a href="/deleteBook/<%= book.bookId %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
                <% } %>
                <a href="/cart/add/<%= book.bookId %>" class="btn btn-success btn-sm">Add to Cart</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="text-center">No books available.</p>
  <% } %>
</div>

<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


