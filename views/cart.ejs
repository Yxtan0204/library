<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Borrow Cart</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <!-- Back to Library button -->
    <div class="d-flex justify-content-end">
      <a href="/library" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Back to Library
      </a>
    </div>

    <h2><i class="fas fa-shopping-cart"></i> Your Borrow Cart</h2>

    <% if (books.length === 0) { %>
      <div class="alert alert-info mt-3">Your cart is empty.</div>
    <% } else { %>
      <ul class="list-group mt-3">
        <% books.forEach(book => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong><%= book.title %></strong> by <%= book.author %>
              <br>
              <small>Available Copies: <%= book.quantity %></small>
              <br>
            </div>
            <a href="/cart/remove/<%= book.bookId %>" class="btn btn-danger btn-sm">Remove</a>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
