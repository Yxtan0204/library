<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Welcome to our website</h1>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
            Hello , <%= user.username %>
            <br> <a href="/logout" class="btn btn-primary mt-3">Logout</a>
        <% } else { %>
        <a href="/register" class="btn btn-primary mt-3">Register</a>
        <a href="/login" class="btn btn-primary mt-3">Login</a>
        <% } %>
    </div>
    <!--Publisher Page-->
    <div class="text-center"><h2>Publisher List</h2></div>
    <br>
  
    <table class="table table-striped">
      <thead>
          <tr>
            <th width="100">Publisher Name</th>
            <th width = "100">Address</th>
            <th width = "100">Country</th>
            <th width="100">Contact</th>
            <th width="100">Image</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < publishers.length; i++) { %>
          <tr>
            <td><a href = "/publishers/<%=publishers[i].publisher_id %>" >
              <%=publishers[i].publisher_name %></a>
            </td>
            <td><%= publishers[i].publisher_address %></td>
            <td><%= publishers[i].publisher_country %></td>
            <td><%= publishers[i].publisher_contact %></td>
            <td><img src = "/images/<%=publishers[i].images %>" class="images" width = "90%"></td>
            <!--Edit Link-->
            <td><a href = "/updatePublisher/<%=publishers[i].publisher_id %>" class="btn btn-outline-primary btn-sm ms-1"
              >Edit</a>
          </td>
            <!--Delete Link-->
            <td><a href = "/deletePublisher/<%=publishers[i].publisher_id %>" onclick = "return confirm('Are you sure you want to delete this publisher?')" 
              class="btn btn-outline-danger btn-sm ms-1">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>




