<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your Monthly Fines</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap & Theme -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/theme.css" rel="stylesheet" />

  <style>
    body {
      background: url('/images/library-bg.jpg') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Verdana, sans-serif;
    }

    .glass-box {
      background: rgba(255, 255, 255, 0.85);
      border-radius: 16px;
      padding: 30px 40px;
      max-width: 600px;
      margin: 80px auto;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    h2 {
      font-weight: bold;
      letter-spacing: 1px;
      text-align: center;
      margin-bottom: 30px;
      color: black;
    }

    table td, table th {
      vertical-align: middle;
      text-align: center;
    }

    .btn-home {
      display: block;
      margin: 30px auto 0;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #a0865a;">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" href="/library">Library App</a>
    <div class="d-flex align-items-center ms-auto">
      <% if (user) { %>
        <span class="navbar-text me-3 text-white">Welcome, <%= user.username %></span>
        <a class="nav-link text-white" href="/logout">Logout</a>
      <% } else { %>
        <a class="nav-link text-white" href="/register">Register</a>
        <a class="nav-link text-white" href="/login">Login</a>
      <% } %>
    </div>
  </div>
</nav>

<!-- Main Fines Box -->
<div class="glass-box">
  <h2>Your Monthly Fines</h2>

  <% if (fines.length > 0) { %>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Return Month</th>
          <th>Total Fine (SGD)</th>
        </tr>
      </thead>
      <tbody class="black-text">
        <% fines.forEach(fine => { %>
          <tr>
            <td><%= fine.return_month %></td>
            <td>$<%= fine.total_fine ? Number(fine.total_fine).toFixed(2) : '0.00' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info text-center mt-3">
      You have no fines this month! ðŸŽ‰
    </div>
  <% } %>

  <a href="/library" class="btn btn-outline-dark btn-home">Back to Library</a>
</div>

</body>
</html>
