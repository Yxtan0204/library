<!-- Publisher Details -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/publishers">Back To Publisher Page</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <% if (user.role === "admin") { %>
              <!-- Admin-specific nav items go here -->
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/Library">Back to Home</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

    <div class="card p-4 shadow-lg border rounded-4 mx-auto mt-4" style =" width:60%; min-height: 500px">
      <div class="text-center">
        <h3>Publisher Details:</h3> 
      </div>
      
      <div class="text-center">
        <% if (publisher) { %>
          <h4><%= publisher.publisher_name %></h4>
          <br>
          <h5><strong>Address:</strong> <%= publisher.publisher_address || 'N/A' %></h5>

          <% if (publisher.images) { %>
            <h5><strong>Image:</strong></h5>
              <img src="/images/<%= publisher.images %>" alt="<%= publisher.publisher_name %> image" width="300" class="img-thumbnail mb-3" onerror="this.src='/images/default.jpg'">
            <h5><strong>Country:</strong> <%= publisher.publisher_country || 'N/A' %></h5>
            <h5><strong>Contact:</strong> <%= publisher.publisher_contact || 'N/A' %></h5>
          <% } %>
          <% if (user && user.role === 'admin') { %>
            <div class="d-flex justify-content-center gap-2 mt-3">
              <a href="/updatePublisher/<%= publisher.publisher_id %>" class="btn btn-outline-primary btn-sm py-0 px-2">Edit</a>
              <a href="/deletePublisher/<%= publisher.publisher_id %>" class="btn btn-outline-danger btn-sm py-0 px-2"
                onclick="return confirm('Are you sure you want to delete this publisher?')">Delete</a>
            </div>
          <% } %>
        <% } else { %>
          <div class="alert alert-warning">No publisher found.</div>
        <% } %>
      </div>
    </div>
  </body>
</html>
