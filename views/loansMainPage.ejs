<!DOCTYPE html>
<html>
<head>
    <title>My Loans - Library App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <style>
      body {
        background: url('/images/library.png') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
      }
      .loans-table-container {
        background: rgba(255,255,255,0.95);
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        padding: 2rem;
        margin-top: 2rem;
      }
      a {
        color: #60c0c2ec;
        text-decoration: none;
      }
      a:hover {
        color: #ff6600;
        text-decoration: underline;
      }
    </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Library App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if (!user) { %>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li> 
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container loans-table-container">
    <h2 class="mb-4 text-primary">ðŸ“š My Loans</h2>

    <% if (loans.length === 0) { %>
      <p>You currently have no borrowed books.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>ðŸ“– Title</th>
              <th>ðŸ–‹ Author</th>
              <th>ðŸ“… Loan Date</th>
              <th>ðŸ“† Due Date</th>
              <th>âœ… Return Date</th>
              <th>ðŸ”„ Action</th>
            </tr>
          </thead>
          <tbody>
            <% loans.forEach(l => { %>
              <tr class="<%= !l.return_date && new Date(l.due_date) < new Date() ? 'table-danger' : '' %>">
                <td><strong><%= l.title %></strong></td>
                <td><%= l.author || '-' %></td>
                <td><%= l.borrow_date || '-' %></td>
                <td><%= l.due_date || '-' %></td>
                <td>
                  <% if (l.return_date) { %>
                    <span class="text-success"><%= l.return_date %></span>
                  <% } else { %>
                    <span class="text-danger">Not Returned</span>
                  <% } %>
                </td>
                <td>
                  <% if (!l.return_date) { %>
                    <a href="/loans/return/<%= l.loan_id %>" class="btn btn-sm btn-outline-warning">Return</a>
                  <% } else { %>
                    <span class="badge bg-success">Returned</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


