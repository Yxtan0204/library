<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Publisher Page</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/publishers">Publisher Page</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/editPublisher">Update Publisher</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addPublisher">Add new Publisher</a>
                </li> 
                 <li class="nav-item">
                  <a class="nav-link" href="/deletePublisher">Delete Publisher</a>
                </li> 
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/Library">Back to Home</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    <!--Publisher Page-->
    <div class="text-center"><h2>Publisher List</h2></div>
    <br>
  
    <table class="table table-striped">
      <thead>
          <tr>
            <th width="100">Publisher Name</th>
            <th width = "100">Address</th>
            <th width = "100">Country</th>
            <th width="100">Contact</th>
            <th width="100">Image</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < publishers.length; i++) { %>
          <tr>
            <td><a href = "/publishers/<%=publishers[i].publisher_id %>" >
              <%=publishers[i].publisher_name %></a>
            </td>
            <td><%= publishers[i].publisher_address %></td>
            <td><%= publishers[i].publisher_country %></td>
            <td><%= publishers[i].publisher_contact %></td>
            <td><img src = "/images/<%=publishers[i].images %>" class="images" width = "90%"></td>
            <!--Edit Link-->
            <td><a href = "/updatePublisher/<%=publishers[i].publisher_id %>" class="btn btn-outline-primary btn-sm ms-1"
              >Edit</a>
          </td>
            <!--Delete Link-->
            <td><a href = "/deletePublisher/<%=publishers[i].publisher_id %>" onclick = "return confirm('Are you sure you want to delete this publisher?')" 
              class="btn btn-outline-danger btn-sm ms-1">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    
</body>
</html>
