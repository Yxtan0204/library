<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Publisher Page</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/publishers">Publisher Page</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/editPublisher">Update Publisher</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addPublisher">Add new Publisher</a>
                </li> 
                 <li class="nav-item">
                  <a class="nav-link" href="/deletePublisher">Delete Publisher</a>
                </li> 
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/Library">Back to Home</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (publishers) { %> <!-- Check if publisher data exists -->
            <div>
                <p><b>Publisher Name:</b><br> <%= publishers.publisher_name %></p>
                <p><b>Publisher Image:</b><br> <img src = "../images/<%= publishers.images %>" width="20%"></p>
                <p><b> Address:</b><br> <%= publishers.publisher_address %></p>
                <p><b>Contact:</b><br><%= publishers.contact %></p> 
            </div>
        <% } else { %>
            <p>No publisher found.</p>
        <% } %>
        <% if (user.role === "admin") { %>
          <a href ="/editPublisher">Back</a>
          <h5>Admin User Actions:</h5>
          <ul>
              <li><a href="/addPublisher">Add new publisher</a></li>
              <li><a href="/editPublisher">Update publisher</a></li>
              <li><a href="/deletePublisher">Delete publisher</a></li>
          </ul>
        <% } else { %>
          <a href ="/">Back</a>
        <% } %>
    </div>
    
</body>
</html>
