<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/theme.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2 class="text-center mb-4">User Management</h2>
  <div class="mb-3 text-end">
    <a href="/admin/add-user" class="btn btn-outline-success">Add New User</a>
    </div>

  <% if (users && users.length > 0) { %>
    <table class="table table-bordered table-hover shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Email</th>
          <th>Contact</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.contact %></td>
            <td><%= user.role %></td>
            <td>
              <a href="updateUser/<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="deleteUser/<%= user.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-center text-muted">No users found.</p>
  <% } %>
</div>
</body>
</html>
