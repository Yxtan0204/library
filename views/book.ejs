<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Library App</title>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Library App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/library">Library</a>
            </li>
            <% if (user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/library">Manage Books</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/myBooks">My Book List</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Book Details -->
  <div class="container mt-4">
    <div class="text-center mb-4">
      <h2>Book Details</h2>
    </div>

    <% if (book) { %>
      <div class="card p-4 mb-3">
        <h4><%= book.title %></h4>
        <p><strong>Author:</strong> <%= book.author || 'Unknown' %></p>

        <p><strong>Cover:</strong></p>
        <% if (book.coverImage) { %>
          <img src="/images/<%= book.coverImage %>" alt="<%= book.title %> cover" width="200" class="img-thumbnail mb-3" onerror="this.src='/images/default.png'">
        <% } else { %>
          <p class="text-muted">No cover available.</p>
        <% } %>

        <p><strong>Quantity:</strong> <%= book.quantity || 'N/A' %></p>
        <p><strong>Genre:</strong> <%= book.genre || 'N/A' %></p>
        <p><strong>Description:</strong> <%= book.description || 'No description provided.' %></p>
        
      </div>
    <% } else { %>
      <div class="alert alert-warning">No book found.</div>
    <% } %>

    <a href="/library" class="btn btn-secondary mt-2">Back</a>
  </div>

</body>
</html>
