<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css
  https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js
  <title>Library App</title>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">LibraryApp</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/library">Library</a>
            </li>
            <% if (user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/books">Manage Books</a>
              </li>
            <% } %>
                         <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Book Details -->
  <div class="container mt-4">
    <div class="text-center mb-4"><h2>Book Details</h2></div>

    <% if (book) { %>
      <div class="card p-4 mb-3">
        <h4><%= book.title %></h4>
        <p><strong>Author:</strong> <%= book.author %></p>
        <p><strong>Cover:</strong><br>
          <img src="/images/<%= book.image %>" width="20%" onerror="this.src='/images/default.png'">
        </p>
        <p><strong>Quantity:</strong> <%= book.quantity %></p>
        <p><strong>Price:</strong> $<%= book.price.toFixed(2) %></p>

        <% if (user.role === 'admin') { %>
         ">
            <a href="/books/<%= book._id %>/edit" class="btn btn-primary me-2">Edit</a>
            <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <div class="alert alert-warning">No book found.</div>
    <% } %>

    <a href="<%= user.role === 'admin' ? '/books' : '/library' %>" class="btn btn-secondary">Back</a>
  </div>

</body>
</html>

