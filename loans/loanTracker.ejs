**5. views/adminLoans.ejs**

```html
<!DOCTYPE html>
<html>
<head>
  <title>Admin - Loan Applications</title>
</head>
<body>
  <h1>All Loan Applications</h1>
  <table border="1">
    <tr>
      <th>User</th>
      <th>Amount</th>
      <th>Term</th>
      <th>Status</th>
      <th>Reason</th>
      <th>Requested At</th>
      <th>Action</th>
    </tr>
    <% loans.forEach(loan => { %>
      <tr>
        <td><%= loan.username %></td>
        <td><%= loan.amount %></td>
        <td><%= loan.term %></td>
        <td><%= loan.status %></td>
        <td><%= loan.reason %></td>
        <td><%= loan.dateRequested.toLocaleString() %></td>
        <td>
          <% if (loan.status === 'pending') { %>
            <form method="POST" action="/loan/<%= loan.loanId %>/approve" style="display:inline;">
              <button type="submit">Approve</button>
            </form>
            <form method="POST" action="/loan/<%= loan.loanId %>/reject" style="display:inline;">
              <button type="submit">Reject</button>
            </form>
          <% } else { %>
            <em><%= loan.status %></em>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </table>
  <a href="/logout">Logout</a>
</body>
</html>